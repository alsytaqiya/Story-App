<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryAppSubmission" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.login" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700 </item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <item name="android:colorBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextHeader">
        <item name="android:lineSpacingMultiplier">1.6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">31sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTittle">
        <item name="android:lineSpacingMultiplier">1.6</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.6</item>
        <item name="android:textSize">21sp</item>

    </style>

    <style name="TextContent.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingMultiplier">1.6</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="TextContent.registration">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:lineSpacingMultiplier">1.6</item>
